<h1>Listing alert_tasks</h1>

<table>
  <thead>
    <tr>
      <th>task</th>
      <th>friend</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alert_tasks.each do |alert_task| %>
      <tr>
        <td><%=Task.find_by_id(UserTaskIntermediate.find_by_id(alert_task.user_task_intermediate_id).task_id).title %></td>
        <td><%= User.find_by_id(FirendRelationship.find_by_id(alert_task.friend_relationship_id).firend).login %></td>
        <td><%= alert_task.has_alert %></td>
        <td><%= link_to 'Show', user_firend_relationship_alert_task_path(:id => alert_task.id) %></td>
        <td><%= link_to 'Edit', edit_user_firend_relationship_alert_task_path(:id => alert_task.id) %></td>
        <td><%= link_to 'Destroy', user_firend_relationship_alert_task_path(:id => alert_task.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

